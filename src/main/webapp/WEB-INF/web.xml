         version="6.0">
    <!-- BEGIN ServletContext parameters for application configuration-->
    <context-param>
        <param-name>db.url</param-name>
        <param-value>jdbc:mariadb://localhost:3307/tiw</param-value>
    </context-param>

    <context-param>
        <param-name>db.user</param-name>
        <param-value>tiw</param-value>
    </context-param>

    <context-param>
        <param-name>db.password</param-name>
        <param-value>tiwpwd</param-value>
    </context-param>

    <context-param>
        <param-name>db.driver</param-name>
        <param-value>org.mariadb.jdbc.Driver</param-value>
    </context-param>
    <!-- END ServletContext parameters for application configuration-->
    <!-- BEGIN Servlet definition -->
    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>
